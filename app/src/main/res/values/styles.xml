<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_normal</item>
        <item name="android:windowBackground">@color/home_background</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme">


    </style>

    <!--hint color-->
    <style name="StyledTilEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--normal color, when no text-->
    <style name="StyledTilEditTextLayout">
        <item name="android:textColorHint">@color/text_color_normal</item>
    </style>

    <style name="PaymentAlterDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/text_color_normal</item>
        <item name="android:textColor">@color/text_color_normal</item>
    </style>

    <style name="MyDatePicker" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="StepsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/keyline_12</item>
        <item name="android:background">@drawable/button_card</item>
        <item name="android:drawablePadding">@dimen/keyline_12</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_black_b5</item>
    </style>

    <style name="LoginField">
        <item name="android:textColorHint">@color/text_color_inactive</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="colorControlNormal">@color/icon_color_inactive</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="PinkButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/button_rounded_corner_pink</item>
    </style>

    <style name="TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@drawable/text_on_pressed_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardButton">
        <item name="android:textColor">@color/color_black_b5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PaymentCardButton">
        <item name="android:background">@drawable/button_card</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
