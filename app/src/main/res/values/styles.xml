<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme">


    </style>

    <style name="LoginField">
        <item name="android:textColorHint">@color/text_color_inactive</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="colorControlNormal">@color/icon_color_inactive</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="PinkButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/button_rounded_corner_pink</item>
    </style>

    <style name="TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/text_on_pressed_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_card</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
        <item name="android:drawableLeft">@drawable/ico_add</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PaymentCardButton">
        <item name="android:background">@drawable/button_card</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
