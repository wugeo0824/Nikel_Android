<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_background"
        android:orientation="vertical"
        android:padding="@dimen/keyline_16">

        <com.media2359.nickel.ui.customview.CustomTextView
            android:id="@+id/tvInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/keyline_12"
            android:textSize="@dimen/font_size_large"
            tools:text="@string/uob_instruction" />

        <com.media2359.nickel.ui.customview.CustomTextView
            android:id="@+id/tvTransferTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/dark_pink"
            tools:text="Transfer to: Nickel" />

        <com.media2359.nickel.ui.customview.CustomTextView
            android:id="@+id/tvAccountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_12"
            android:text="@string/account_no"
            android:textColor="@color/dark_pink"
            android:textSize="@dimen/font_size_large" />

        <ImageView
            android:id="@+id/ivUOB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/uob_logo" />

        <com.media2359.nickel.ui.customview.CustomButton
            android:id="@+id/btnTakeReceipt"
            style="@style/StepsButton"
            android:drawableLeft="@drawable/icn_picture"
            android:text="@string/take_picture_receipt" />

        <com.media2359.nickel.ui.customview.CustomButton
            android:id="@+id/btnStepGuide"
            style="@style/StepsButton"
            android:drawableLeft="@drawable/icn_step"
            android:text="@string/step_by_step" />

        <LinearLayout
            android:id="@+id/btnUOBMachines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_12"
            android:background="@drawable/button_card"
            android:clickable="true"
            android:orientation="vertical">

            <com.media2359.nickel.ui.customview.CustomTextView
                style="@style/StepsButton"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icn_near"
                android:minHeight="45dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/nearest_atm" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_map" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>