<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/keyline_12">

    <ImageView
        android:id="@+id/ivFieldLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/inputLayout"
        android:padding="@dimen/keyline_12"
        android:src="@drawable/ic_person_black_24dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFieldLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/ivFieldStatus"
        android:padding="@dimen/keyline_12"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ico_ok"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>